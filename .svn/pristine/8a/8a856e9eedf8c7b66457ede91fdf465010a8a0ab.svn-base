<form name="contaCorrenteForm" novalidate>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" ng-click="cancel()">&times;</button>
        <h4 class="modal-title">{{title}}</h4>
    </div>
    <div class="modal-body">
        <div class="bootbox-body">
            <ul class="list-unstyled">
                <li class="list-group-item">
                    <div class="row form-horizontal">
                        <input type="hidden" name="idContaCorrente" ng-model="contaCorrente.idContaCorrente"/>
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            <label class="small">Nome</label>
                            <div class="input-group">
                                <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                <input type="text" autocomplete="off" name="nome" class="form-control" ng-model="contaCorrente.nome" 
                                       ng-required="true" placeholder="Nome da conta corrente"/>                                    
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            <label class="small">Banco</label>
                            <div class="input-group">
                                <span class="input-group-addon" ><i class="fa fa-info"></i></span>
                                <select class="form-control" name="banco" 
                                        ng-options="(banco.numero + ' - ' + banco.nome) for banco in bancos track by banco.idBanco" ng-model="contaCorrente.banco"></select>
<!--                                <span class="input-group-btn">
                                    <button class="btn btn-lg btn-primary" type="button" ng-click="openBanco()"><i class="fa fa-plus-circle"></i></button>
                                </span>-->
                            </div>
                        </div> 
                        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                            <label class="small">Agência</label>
                            <div class="input-group">
                                <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                <input type="number" autocomplete="off" name="agencia" class="form-control" ng-model="contaCorrente.agencia" 
                                       ng-required="true" placeholder="Número agência"/>     
                                <span class="input-group-addon">-</span>
                                <input type="number" autocomplete="off" name="agenciaDv" min="0" max="99" class="form-control" ng-model="contaCorrente.agenciaDv" 
                                       ng-required="true"/>                                               
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                            <label class="small">Conta Corrente</label>
                            <div class="input-group">
                                <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                <input type="number" autocomplete="off" name="contaCorrente" class="form-control" ng-model="contaCorrente.contaCorrente" 
                                       ng-required="true" placeholder="Número conta corrente"/>     
                                <span class="input-group-addon">-</span>
                                <input type="number" autocomplete="off" name="contaCorrenteDv" min="0" max="99" class="form-control" ng-model="contaCorrente.contaCorrenteDv" 
                                       ng-required="true" />                                       
                            </div>
                        </div>                         
                        <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2">
                            <label class="small">Poupança</label>
                            <div class="input-group">
                                <span class="input-group-addon" ><i class="fa fa-info"></i></span>
                                <select class="form-control" name="poupanca" ng-model="contaCorrente.poupanca"
                                        ng-options="item.value as item.label for item in [{ label: 'Não', value: false }, { label: 'Sim', value: true }]">
                                </select>
                            </div>
                        </div>                           
                        <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2">
                            <label class="small">Limite</label>
                            <div class="input-group">
                                <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                <input type="text" autocomplete="off" name="limite" class="form-control" ng-model="contaCorrente.limite" 
                                       ui-number-mask="2" placeholder="Limite"/>                 
                            </div>
                        </div>      
<!--                        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                            <div class="checkbox-form">
                                <input type="checkbox" name="poupanca" class="checkbox-inline" ng-model="contaCorrente.poupanca"> Possui Poupança?
                            </div>
                        </div>-->
                    </div>
                </li>
            </ul>     
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" ng-click="cancel()">
            <i class="fa fa-lg fa-times fa-spc"></i> CANCELAR
        </button>
        <button type="button" class="btn btn-success" ng-click="ok(this.contaCorrenteForm)">
            <i class="fa fa-lg fa-save fa-spc"></i> SALVAR
        </button>
    </div>
</form>    

  