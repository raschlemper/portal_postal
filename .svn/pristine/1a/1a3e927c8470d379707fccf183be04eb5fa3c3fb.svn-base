
/*LEVEL ONE*/
ul.dropdown { position: relative; list-style: none; height: 41px; z-index: 2; font-size: 14px; background: url('../../../../imagensNew/menu-ctr.png') #2191c0;}
ul.dropdown li { font-weight: bold; float: left; zoom:1; }
ul.dropdown a:hover { color: black; }
ul.dropdown a:active { color: #ffa500; }
ul.dropdown li a { display: block; padding: 12px 25px; border-right: 1px solid #333; color: white; }
ul.dropdown li a img { position:absolute; margin-left:-20px; margin-top:-2px; }
ul.dropdown li a span { margin-left: 10px; }
ul.dropdown li:last-child a { border-right: none; } /* Doesn't work in IE */
ul.dropdown li.hover, ul.dropdown li:hover { background: url('../../../../imagensNew/sombra1.png') repeat-x #ddd; color: black; position: relative; }
ul.dropdown li.hover a { color: black; }

/*LEVEL TWO*/
ul.dropdown ul { text-align: left; width: 220px; visibility: hidden; position: absolute; top: 100%; left: 0; list-style: none; }
ul.dropdown ul li { font-weight: normal; background: #f6f6f6; color: #000; border-bottom: 1px solid #ccc; float: none; }
									  
/* IE 6 & 7 Needs Inline Block */
ul.dropdown ul li a { border-right: none; width: 100%; display: inline-block; color: black; }

/*LEVEL THREE*/
ul.dropdown ul ul { left: 100%; top: 0; list-style: none; }
ul.dropdown li:hover > ul { visibility: visible; }