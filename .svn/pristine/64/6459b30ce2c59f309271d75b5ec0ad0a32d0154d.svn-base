/* Toggle Styles */
/* This sidebar modified by seegatesite.com */

#wrapper {
    padding-left: 0;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
    background-color: #fff;
}

#wrapper.toggled {
    padding-left: 250px;
}

#sidebar-wrapper {
    z-index: 2000;
    position: fixed;
    // left: 250px;
    margin-top: 65px;
    width: 0; /* disini agar ketika di kecilkan tidak hilang semua default 0*/
    height: 100%;
    margin-left: -250px;
    overflow-y: auto;
    background: #f7f7f7;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
    border-right:1px solid #dfdfdf;
}
#wrapper.toggled #sidebar-wrapper {
    width: 250px;
}

#page-content-wrapper {
    width: 100%;
    position: absolute;
    padding: 10px 0px;
}

#wrapper.toggled #page-content-wrapper {
    position: absolute;
    margin-right: -250px;
}
.fixed-brand{
    width: auto;
    margin-top: 7px;
    margin-bottom: 7px;
    z-index: 2000;
}
/* Sidebar Styles */

.sidebar-nav {
    position: absolute;
    top: 0;
    width: 250px;
    margin: 0;
    padding: 0;
    list-style: none;
    margin-top: 2px;
}

.sidebar-nav li {
    text-indent: 15px;
    line-height: 40px;
}

.sidebar-nav li a span {
    padding-top: 2px;
}

.sidebar-nav li a {
    display: block;
    text-decoration: none;
    color: #336699;
    padding-left: 3px;
}

.sidebar-nav li a:hover {
    text-decoration: none;
    color: #157EFB;
    background: #d8d8d8;
    border-left: #157EFB 3px solid;
    padding-left: 0px;
}

.sidebar-nav li a.active {
    text-decoration: none;
    color: #157EFB;
    background: #e8e8e8;
    border-left: #157EFB 3px solid;
    padding-left: 0px;
}

.sidebar-nav li a.active:hover {
    background: #d8d8d8;
}

.sidebar-nav li a.danger {
    display: block;
    text-decoration: none;
    color: #CC0000;
    padding-left: 3px;
}

.sidebar-nav li a.danger:hover {
    text-decoration: none;
    color: red;
    background: #d8d8d8;
    border-left: red 3px solid;
    padding-left: 0px;
}

.sidebar-nav li a:active {
    text-decoration: none;
    background: #dfdfdf;
}
.sidebar-nav li a:focus {
    text-decoration: none;
}

.sidebar-nav > .sidebar-brand {
    height: 65px;
    font-size: 18px;
    line-height: 60px;
}

.sidebar-nav > .sidebar-brand a {
    color: #999999;
}

.sidebar-nav > .sidebar-brand a:hover {
    color: #fff;
    background: none;
}
.no-margin{
    margin:0;
}

@media(min-width:768px) {
    #wrapper {
        padding-left: 250px;
    }
    .fixed-brand{
        width: 300px;
    }
    #wrapper.toggled {
        padding-left: 0;
    }

    #sidebar-wrapper {
        width: 250px;
        margin-top: 55px;
    }

    #wrapper.toggled #sidebar-wrapper {
        width: 250px;
    }
    #wrapper.toggled-2 #sidebar-wrapper {
        width: 50px;
    }
    #wrapper.toggled-2 #sidebar-wrapper:hover {
        width: 250px;
    }

    #page-content-wrapper {
        padding: 10px 0px;
        position: relative;
        -webkit-transition: all 0.5s ease;
        -moz-transition: all 0.5s ease;
        -o-transition: all 0.5s ease;
        transition: all 0.5s ease;
        background-color: white;
    }

    #wrapper.toggled #page-content-wrapper {
        position: relative;
        margin-right: 0;
        padding-left: 250px;

    }
    #wrapper.toggled-2 #page-content-wrapper {
        position: relative;
        width: auto;
        // margin-right: 0;
        margin-left: -250px;
        padding-left: 65px;
        -webkit-transition: all 0.5s ease;
        -moz-transition: all 0.5s ease;
        -o-transition: all 0.5s ease;
        transition: all 0.5s ease;
    }

}