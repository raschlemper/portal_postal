<form name="fornecedorForm" novalidate>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" ng-click="cancel()">&times;</button>
        <h4 class="modal-title">{{title}}</h4>
    </div>
    <div class="modal-body">
        <div class="bootbox-body">
            <ul class="list-unstyled">
                <li class="list-group-item">
                    <div class="row form-horizontal" style="padding: 10px;">
                        
                        <ul class="nav nav-tabs" role="tablist">
                            <li role="fornecedor" class="active">
                                <a href="#geral" aria-controls="geral" role="tab" data-toggle="tab">Geral</a>
                            </li>
                            <li role="fornecedor">
                                <a href="#endereco" aria-controls="endereco" role="tab" data-toggle="tab">Endereço</a>
                            </li>
                        </ul>                        
                        
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="geral">
                                <input type="hidden" name="idFornecedor" ng-model="fornecedor.idFornecedor"/>
                                <div class="col-xs-12 col-sm-6 col-md-9 col-lg-9" ng-if="fornecedor.tipoPessoa.id == 0">
                                    <label class="small">Nome</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="nomeFantasia" class="form-control" ng-model="fornecedor.nomeFantasia" 
                                               ng-required="true" placeholder="Nome do fornecedor"/>                                    
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-9 col-lg-9" ng-if="fornecedor.tipoPessoa.id == 1">
                                    <label class="small">Nome Fantasia</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="nomeFantasia" class="form-control" ng-model="fornecedor.nomeFantasia" 
                                               ng-required="true" placeholder="Nome fantasia do fornecedor"/>                                    
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                                    <label class="small">Situação</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-info"></i></span>
                                        <select class="form-control" name="status" ng-model="fornecedor.status" ng-required="true"
                                                ng-options="situacao.descricao for situacao in situacoes track by situacao.id"></select>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-9 col-lg-9" ng-if="fornecedor.tipoPessoa.id == 0">
                                    <label class="small">Empresa</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="razaoSocial" class="form-control" ng-model="fornecedor.razaoSocial" 
                                               placeholder="Empresa do fornecedor"/>                                    
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-9 col-lg-9" ng-if="fornecedor.tipoPessoa.id == 1">
                                    <label class="small">Razão Social</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="razaoSocial" class="form-control" ng-model="fornecedor.razaoSocial" 
                                               placeholder="Razão social do fornecedor"/>                                    
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                                    <label class="small">Pessoa</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-info"></i></span>
                                        <select class="form-control" name="tipoPessoa" ng-model="fornecedor.tipoPessoa" 
                                                ng-options="pessoa.descricao for pessoa in tipoPessoas track by pessoa.id"></select>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3" ng-if="fornecedor.tipoPessoa.id == 0">
                                    <label class="small">CPF</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="cpf" class="form-control" ng-model="fornecedor.cpf" 
                                               placeholder="Cpf do fornecedor"/>          
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3" ng-if="fornecedor.tipoPessoa.id == 0">
                                    <label class="small">RG</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="rg" class="form-control" ng-model="fornecedor.rg" 
                                               placeholder="Rg do fornecedor"/>   
                                    </div>
                                </div>     
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3" ng-if="fornecedor.tipoPessoa.id == 0">
                                    <label class="small">Sexo</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-info"></i></span>
                                        <select class="form-control" name="sexo" ng-model="fornecedor.sexo"
                                                ng-options="sexo.descricao for sexo in sexos track by sexo.id"></select>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3" ng-if="fornecedor.tipoPessoa.id == 0">
                                    <label class="small">Data Nascimento</label>
                                    <app-datepicker class="input-group" placeholder="Data de nascimento do fornecedor" name="dataNascimento" datepicker-model="fornecedor.dataNascimento"></app-datepicker>                                        
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3" ng-if="fornecedor.tipoPessoa.id == 1">
                                    <label class="small">CNPJ</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="cnpj" class="form-control" ng-model="fornecedor.cnpj" 
                                               placeholder="Cnpj do fornecedor"/>          
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3" ng-if="fornecedor.tipoPessoa.id == 1">
                                    <label class="small">Inscrição Estadual</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="inscricaoEstadual" class="form-control" ng-model="fornecedor.inscricaoEstadual" 
                                               placeholder="Inscrição Estadual do fornecedor"/>   
                                    </div>
                                </div>  
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3" ng-if="fornecedor.tipoPessoa.id == 1">
                                    <label class="small">Capital Social</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-usd"></i></span>
                                        <input type="text" autocomplete="off" name="capitalSocial" class="form-control text-right"
                                               ui-number-mask="2" placeholder="Capital Social do fornecedor" ng-model="fornecedor.capitalSocial"/>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3" ng-if="fornecedor.tipoPessoa.id == 1">
                                    <label class="small">Data Fundação</label>
                                    <app-datepicker class="input-group" placeholder="Data de fundação do fornecedor" name="dataFundacao" datepicker-model="fornecedor.dataFundacao"></app-datepicker>                                        
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                                    <label class="small">Telefone</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="telefone" class="form-control" ng-model="fornecedor.telefone"
                                               ui-mask="(99) 99999-9999" ui-mask-placeholder-char="_" ui-mask-placeholder placeholder="Número telefone"/>                                               
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                                    <label class="small">Celular</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="celular" class="form-control" ng-model="fornecedor.celular"
                                               ui-mask="(99) 99999-9999" ui-mask-placeholder-char="_" ui-mask-placeholder placeholder="Número celular"/>                                               
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                    <label class="small">Email</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="email" class="form-control" ng-model="fornecedor.email"
                                               placeholder="Email do fornecedor"/>                                               
                                    </div>
                                </div>  
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <label class="small">Observação</label>
                                    <textarea class="form-control" rows="3" name="observacao" placeholder="" ng-model="fornecedor.observacao"></textarea>       
                                </div>
                            </div>
                            <div role="tabpanel" class="tab-pane" id="endereco">
                                <div class="col-xs-12 col-sm-6 col-md-8 col-lg-8">
                                    <label class="small">Logradouro</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="logradouro" class="form-control" ng-model="fornecedor.endereco.logradouro" 
                                               placeholder="Logradouro do endereço"/>   
                                    </div>
                                </div>        
                                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                    <label class="small">CEP</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input class="form-control" type="text" name="cep" ng-model="fornecedor.endereco.cep" ui-br-cep-mask placeholder="Pesquisar por CEP" />                                
                                        <span class="input-group-addon icon-search" title="Pesquisar CEP" ng-click="pesquisarCep(fornecedor.endereco.cep)"><i class="fa fa-search"></i></span>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-9 col-lg-9">
                                    <label class="small">Complemento</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="complemento" class="form-control" ng-model="fornecedor.endereco.complemento" 
                                               placeholder="Complemento do endereço"/>   
                                    </div>
                                </div>  
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                                    <label class="small">Número</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="number" autocomplete="off" name="numero" class="form-control" ng-model="fornecedor.endereco.numero" 
                                               placeholder="Número"/>   
                                    </div>
                                </div>      
                                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                    <label class="small">Bairo</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="bairro" class="form-control" ng-model="fornecedor.endereco.bairro" 
                                               placeholder="Bairro do endereço"/>   
                                    </div>
                                </div>       
                                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                    <label class="small">Cidade</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="cidade" class="form-control" ng-model="fornecedor.endereco.cidade" 
                                               placeholder="Cidade do endereço"/>   
                                    </div>
                                </div>       
                                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                    <label class="small">Estado</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="estado" class="form-control" ng-model="fornecedor.endereco.estado" 
                                               placeholder="Estado do endereço"/>   
                                    </div>
                                </div>          
                            </div>
                            <div role="tabpanel" class="tab-pane" id="profissional">
                                <div class="col-xs-12 col-sm-6 col-md-8 col-lg-8">
                                    <label class="small">Cargo / Função</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="cargoFuncao" class="form-control" ng-model="fornecedor.informacaoProfissional.cargoFuncao" 
                                               placeholder="Cargo ou função do fornecedor"/>   
                                    </div>
                                </div>             
                                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                    <label class="small">Salário</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="salario" class="form-control" ng-model="fornecedor.informacaoProfissional.salario" 
                                               ui-number-mask="2" placeholder="Salário do fornecedor"/>   
                                    </div>
                                </div>           
                                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                    <label class="small">Admissão</label>
                                    <app-datepicker class="input-group" placeholder="Data de admissão do fornecedor" name="dataAdmissao" datepicker-model="fornecedor.informacaoProfissional.dataAdmissao"></app-datepicker>
                                </div>              
                                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                    <label class="small">Demissão</label>
                                    <app-datepicker class="input-group" placeholder="Data de demissão do fornecedor" name="dataDemissao" datepicker-model="fornecedor.informacaoProfissional.dataDemissao"></app-datepicker>
                                </div>        
                                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                    <label class="small">PIS / PASEP</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="pisPasep" class="form-control" ng-model="fornecedor.informacaoProfissional.pisPasep" 
                                               placeholder="Pis/Pasep do fornecedor"/>   
                                    </div>
                                </div>           
                                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                    <label class="small">Título Eleitoral</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="tituloEleitoral" class="form-control" ng-model="fornecedor.informacaoProfissional.tituloEleitoral" 
                                               placeholder="Título eleitoral do fornecedor"/>   
                                    </div>
                                </div>           
                                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                    <label class="small">Cert. Reservista</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="certificadoReservista" class="form-control" ng-model="fornecedor.informacaoProfissional.certificadoReservista" 
                                               placeholder="Certificado de reservista do fornecedor"/>   
                                    </div>
                                </div>           
                                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                    <label class="small">N. CTPS</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="ctps" class="form-control" ng-model="fornecedor.informacaoProfissional.ctps" 
                                               placeholder="Número carteira de trabalho"/>   
                                    </div>
                                </div>  
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                                    <label class="small">Horário Entrada</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="horarioEntrada" class="form-control" ng-model="fornecedor.informacaoProfissional.horarioEntrada"
                                               model-view-value="true" ui-mask="99:99" ui-mask-placeholder-char="_" ui-mask-placeholder placeholder="Horário de entrada"/>                                               
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                                    <label class="small">Horário Saída</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="horarioSaida" class="form-control" ng-model="fornecedor.informacaoProfissional.horarioSaida"
                                               model-view-value="true" ui-mask="99:99" ui-mask-placeholder-char="_" ui-mask-placeholder placeholder="Horário de saída"/>                                               
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                                    <label class="small">Intervalo Início</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="intervaloDe" class="form-control" ng-model="fornecedor.informacaoProfissional.intervaloDe"
                                               model-view-value="true" ui-mask="99:99" ui-mask-placeholder-char="_" ui-mask-placeholder placeholder="Início do intervalo"/>                                               
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                                    <label class="small">Intervalo Fim</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-asterisk"></i></span>
                                        <input type="text" autocomplete="off" name="intervaloAte" class="form-control" ng-model="fornecedor.informacaoProfissional.intervaloAte"
                                               model-view-value="true" ui-mask="99:99" ui-mask-placeholder-char="_" ui-mask-placeholder placeholder="Fim do intervalo"/>                                               
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <label class="small">Observação</label>
                                    <textarea class="form-control" rows="3" name="profissionalObservacao" placeholder="" ng-model="fornecedor.informacaoProfissional.observacao"></textarea>       
                                </div>
                            </div>
                            <div role="tabpanel" class="tab-pane" id="bancaria">
                                <div class="col-xs-12 col-sm-6 col-md-8 col-lg-8">
                                    <label class="small">Banco</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-info"></i></span>
                                        <select class="form-control" name="banco" 
                                                ng-options="(banco.numero + ' - ' + banco.nome) for banco in bancos track by banco.idBanco" ng-model="fornecedor.informacaoBancaria.banco"></select>
                                    </div>
                                </div> 
                                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                                    <label class="small">Tipo Conta</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-info"></i></span>
                                        <select class="form-control" name="tipoConta"
                                                ng-options="tipo.descricao for tipo in tipos track by tipo.id" ng-model="fornecedor.informacaoBancaria.tipoConta"></select>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                    <label class="small">Agência</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="number" autocomplete="off" name="agencia" class="form-control" ng-model="fornecedor.informacaoBancaria.agencia" 
                                               placeholder="Número agência"/>     
                                        <span class="input-group-addon">-</span>
                                        <input type="number" autocomplete="off" name="agenciaDv"  min="0" max="99" class="form-control" ng-model="fornecedor.informacaoBancaria.agenciaDv" 
                                              />                                               
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                    <label class="small">Conta Corrente</label>
                                    <div class="input-group">
                                        <span class="input-group-addon" ><i class="fa fa-asterisk"></i></span>
                                        <input type="number" autocomplete="off" name="contaCorrente" class="form-control" ng-model="fornecedor.informacaoBancaria.contaCorrente" 
                                               placeholder="Número conta corrente"/>     
                                        <span class="input-group-addon">-</span>
                                        <input type="number" autocomplete="off" name="contaCorrenteDv" min="0" max="99" class="form-control" ng-model="fornecedor.informacaoBancaria.contaCorrenteDv" 
                                               />                                       
                                    </div>
                                </div>          
                            </div>
                        </div>
                    </div>
                </li>
            </ul>     
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" ng-click="cancel()">
            <i class="fa fa-lg fa-times fa-spc"></i> CANCELAR
        </button>
        <button type="button" class="btn btn-success" ng-click="ok(this.fornecedorForm)">
            <i class="fa fa-lg fa-save fa-spc"></i> SALVAR
        </button>
    </div>
</form>    

  