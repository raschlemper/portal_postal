<div id="page-content-wrapper">
    <div class="container-fluid">
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading" >
                            <div class="row" style="padding-bottom: 10px;">
                                <div class="col-md-12 text-center">
                                    <h4><strong>{{title}}</strong>
                                        <div class="pull-right pull-top">   
                                            <button class="btn btn-sm btn-default" ng-click="export(lancamentosListaTable)" style="margin-right: 10px;">
                                                <i class="fa fa-lg fa-download fa-spc"></i> EXPORTAR 
                                            </button>                      
                                            <button class="btn btn-sm btn-default" ng-click="report(lancamentosListaTable)" style="margin-right: 10px;">
                                                <i class="fa fa-lg fa-print fa-spc"></i> IMPRIMIR 
                                            </button>                                          
                                        </div>
                                    </h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="pull-left">                                     
                                        <button class="btn btn-sm btn-default" ng-click="excluirTodos(lancSearch.conta, events.list())">
                                            <i class="fa fa-lg fa-times fa-spc-sm"></i> EXCLUIR 
                                        </button>                                             
                                        <button class="btn btn-sm btn-default" ng-click="moverContaTodos(lancSearch.conta, events.list())">
                                            <i class="fa fa-lg fa-arrow-circle-right fa-spc-sm"></i> MOVER 
                                        </button>                                           
                                        <button class="btn btn-sm btn-default" ng-click="compensarTodos(lancSearch.conta, events.list())">
                                            <i class="fa fa-lg fa-arrow-circle-o-down fa-spc-sm"></i> COMPENSAR 
                                        </button>                               
                                        <button class="btn btn-sm btn-default" ng-click="conciliar(lancSearch.conta)">
                                            <i class="fa fa-lg fa-retweet fa-spc-sm"></i> RECONCILIAÇÃO 
                                        </button>                                    
                                        <button class="btn btn-sm btn-default" ui-sref="app.financeiro.lancamentoprogramado">
                                            <i class="fa fa-lg fa-clock-o fa-spc-sm"></i> PROGRAMAÇÃO 
                                        </button>      
                                    </div>
                                    <div class="pull-right">  
                                        <button class="btn btn-sm btn-primary spc-right" ng-click="salvar(lancSearch.conta, tipos[0])">
                                            <i class="fa fa-lg fa-plus-circle fa-spc"></i> RECEITA
                                        </button>     
                                        <button class="btn btn-sm btn-danger spc-right" ng-click="salvar(lancSearch.conta, tipos[1])">
                                            <i class="fa fa-lg fa-minus-circle fa-spc"></i> DESPESA
                                        </button>   
                                        <button class="btn btn-sm btn-success" ng-click="transferir(lancSearch.conta)">
                                            <i class="fa fa-lg fa-exchange fa-spc"></i> TRANSFERÊNCIA
                                        </button>     
                                    </div>
                                </div>
                            </div>                              
                        </div>
                        <div class="panel-body">
                            <div class="dataTable_wrapper no-padding">
                                 <app-table lista="lancamentosLista" 
                                            colunas="colunas" 
                                            linha="linha" 
                                            events="events" 
                                            filter="filter" 
                                            search="lancSearch" 
                                            default-filter="true" 
                                            order-by-column="data" 
                                            show-checkbox="true"
                                            show-menu="true"
                                            show-column-menu="true"
                                            last-page="true">
                                    
                                    <filter-content>
                                        <div class="form-inline pull-left">
                                            
                                            
                                            <div class="form-group">

                                                <label>Conta:</label>
                                                <select class="form-control spc-right" ng-model="lancSearch.conta" ng-change="changeConta(lancSearch.conta)"
                                                    ng-options="conta.nome for conta in contas track by conta.idConta">     
                                                    <option value=""> Todos </option> 
                                                </select>

                                                <label>Tipo:</label>
                                                <select class="form-control spc-right" ng-model="lancSearch.tipo">
                                                    <option value=""> Todos </option> 
                                                    <option value="{{tipo}}" ng-repeat="tipo in tipos track by $index"> {{tipo.descricao}} </option>        
                                                </select>

                                                <br>

                                                <label>Período:</label>
                                                <select class="form-control spc-right" ng-model="lancSearch.periodo" ng-change="changePeriodo(lancSearch.conta, lancSearch.periodo)"
                                                        ng-options="periodo.descricao for periodo in periodos track by periodo.id">
                                                    <option value=""> Livre </option>
                                                </select>

                                                <label>Data:</label>
                                                <div class="input-group spc-right">                                                    
                                                    <input type="text" autocomplete="off" class="form-control" style="width: 120px;" id="dataInicio" name="dataInicio" datepicker-custom ng-model="lancSearch.dataInicio" ng-change="changeDataInicio(lancSearch.conta, lancSearch.dataInicio)"/>
                                                    <label for="dataInicio" class='input-group-addon'><i class='fa fa-calendar'></i></label>
                                                    <span class="input-group-addon">-</span>                                                    
                                                    <input type="text" autocomplete="off" class="form-control" style="width: 120px;" id="dataFim" name="dataFim" datepicker-custom ng-model="lancSearch.dataFim" ng-change="changeDataFim(lancSearch.conta, lancSearch.dataFim)"/>
                                                    <label for="dataFim" class='input-group-addon'><i class='fa fa-calendar'></i></label>
                                                </div>  

                                                <button class="btn btn-sm btn-default" ng-click="filterByDays(-1, true)">Último dia útil</button> 
                                                <button class="btn btn-sm btn-default" ng-click="filterByDays(0, false)">Hoje</button> 

                                                <br>
                                                
                                                <plano-conta class="spc-right" plano-conta-model="lancSearch.planoConta" show-type-filter="true" validar-selected="false"></plano-conta>
                                                <centro-custo class="spc-right" centro-custo-model="lancSearch.centroCusto" show-type-filter="true" validar-selected="false"></centro-custo>
                                               
                                            </div>
                                            
                                        </div>
                                    </filter-content>   
                                    
                                    <title-content>
                                        <div class="margin-top">
                                            <div class="title-table" ng-if="!lancSearch.conta">
                                                <i><strong>Todas as Contas</strong>
                                                    <small style="font-size: 11pt;">(Para este filtro de "Todas as Contas", favor desconsiderar o saldo, filtro somente para pesquisa de lançamentos)</small>
                                                </i>
                                            </div>
                                            <div class="title-table" ng-if="lancSearch.conta">
                                                <strong><i>{{lancSearch.conta.nome}} 
                                                        <span style="font-size: 11pt;" ng-show="lancSearch.conta.contaCorrente && lancSearch.conta.contaCorrente.banco && lancSearch.conta.contaCorrente.agencia && lancSearch.conta.contaCorrente.contaCorrente"> 
                                                       - (Banco: {{lancSearch.conta.contaCorrente.banco.nome}} / Agência: {{lancSearch.conta.contaCorrente.agencia}}-{{lancSearch.conta.contaCorrente.agenciaDv}} / Conta: {{lancSearch.conta.contaCorrente.contaCorrente}}-{{lancSearch.conta.contaCorrente.contaCorrenteDv}})
                                                   </span>
                                                        <span ng-show="false">/ ({{lancSearch.conta.status.descricao}})</span>
                                                </i></strong>
                                            </div>
                                        </div>
                                    </title-content>>
                                    
                                     <rodape-content>
                                         
                                         <div class="col-md-12">
                                             <span class="pull-right">
                                                <label>Saldo Final:</label> {{saldoTotal | currency : ""}}
                                             </span>
                                         </div> 
                                         
                                     </rodape-content>                                 
                                    
                                </app-table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</div>
